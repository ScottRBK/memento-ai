# and customize the values for your environment.

# Application Info
SERVICE_NAME=VERIDIAN
SERVICE_VERSION=v0.1.0
SERVICE_DESCRIPTION="Veridian Memory Service"

# Server Configuration
HOST=0.0.0.0
SERVER_PORT=8020
LOG_LEVEL=INFO

# Docker Compose
COMPOSE_PROJECT_NAME=Veridian
ENVIRONMENT=example

# Use 127.0.0.1 for localhost-only (secure, recommended for production)
# Use 0.0.0.0 to expose on all interfaces (development only)
BIND_ADDRESS=127.0.0.1


#Repository Config
DATABASE=Postgres
PGPORT=5099
POSTGRES_DB=veridian
## CHANGES THESE ##
POSTGRES_USER=veridian 
POSTGRES_PASSWORD=veridian
DB_LOGGING=false


